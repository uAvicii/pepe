{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // "extends": "./tsconfig/tsconfig.json",
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "*.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue,",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.md"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*",
    "**/__test__/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}